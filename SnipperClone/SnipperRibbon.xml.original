<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="OnRibbonLoad">
  <ribbon>
    <tabs>
      <tab id="SnipperCloneTab" label="DATASNIPPER">
        <group id="SnipGroup" label="Snips">
          <button id="TextSnipButton" 
                  label="Text Snip" 
                  size="large"
                  onAction="OnTextSnip"
                  screentip="Text Snip"
                  supertip="Extract text from selected area using OCR" />
          
          <button id="SumSnipButton" 
                  label="Sum Snip" 
                  size="large"
                  onAction="OnSumSnip"
                  screentip="Sum Snip"
                  supertip="Extract and sum numbers from selected area" />
          
          <button id="TableSnipButton" 
                  label="Table Snip" 
                  size="large"
                  onAction="OnTableSnip"
                  screentip="Table Snip"
                  supertip="Extract table data from selected area" />
          
          <separator id="ValidationSeparator" />
          
          <button id="ValidationSnipButton" 
                  label="Validation" 
                  size="large"
                  onAction="OnValidationSnip"
                  screentip="Validation Snip"
                  supertip="Mark area as validated with checkmark" />
          
          <button id="ExceptionSnipButton" 
                  label="Exception" 
                  size="large"
                  onAction="OnExceptionSnip"
                  screentip="Exception Snip"
                  supertip="Mark area as exception with cross mark" />
        </group>
        
        <group id="ViewerGroup" label="Document">
          <button id="OpenViewerButton" 
                  label="Open Viewer" 
                  size="large"
                  onAction="OnOpenViewer"
                  screentip="Document Viewer"
                  supertip="Open the document viewer to import and analyze documents" />
        </group>
        
        <group id="NavigationGroup" label="Navigation">
          <button id="JumpBackButton" 
                  label="Jump Back" 
                  size="large"
                  onAction="OnJumpBack"
                  screentip="Jump Back"
                  supertip="Navigate to the document location of the selected snip" />
          
          <button id="ShowSnipInfoButton" 
                  label="Snip Info" 
                  size="normal"
                  onAction="OnShowSnipInfo"
                  screentip="Snip Information"
                  supertip="Show detailed information about the selected snip" />
        </group>
        
        <group id="ManagementGroup" label="Management">
          <button id="HighlightSnipsButton" 
                  label="Highlight Snips" 
                  size="normal"
                  onAction="OnHighlightSnips"
                  screentip="Highlight All Snips"
                  supertip="Highlight all cells that contain snips with color coding" />
          
          <button id="ClearHighlightsButton" 
                  label="Clear Highlights" 
                  size="normal"
                  onAction="OnClearHighlights"
                  screentip="Clear Highlights"
                  supertip="Remove all snip highlighting from the worksheet" />
          
          <button id="DeleteSnipButton" 
                  label="Delete Snip" 
                  size="normal"
                  onAction="OnDeleteSnip"
                  screentip="Delete Snip"
                  supertip="Delete the snip from the selected cell" />
          
          <separator id="ModeSeparator" />
          
          <button id="ClearModeButton" 
                  label="Clear Mode" 
                  size="normal"
                  onAction="OnClearMode"
                  screentip="Clear Mode"
                  supertip="Exit current snip mode and return to normal selection" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI> 